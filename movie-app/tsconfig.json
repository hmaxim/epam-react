{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "include": ["./src", "./test", "./mocks", "./extend-expect.d.ts"],
    "plugins": [
      {
        "transform": "typescript-magic-variable-plugin",
        // the following options is optional
        "setComponentId": true,
        "setDisplayName": true,
        "minify": true
      }
    ]
  }
}
